#pay {
  text-align: center;
  padding-bottom: 100rpx;
}
.title {
  padding: 20rpx 0;
}
.title button {
  color: rgb(12, 197, 12);
}
.address {
  display: flex;
  font-size: 30rpx;
  padding: 20rpx;
}
.user-info {
  flex: 5;
  text-align: left;
}
.tel {
  flex: 3;
  text-align: right;
}
.center {
  text-align: left;
  border-top: 3rpx solid rgba(255, 0, 0, 0.616);
  border-bottom: 3rpx solid rgba(255, 0, 0, 0.616);
  padding: 20rpx 30rpx;
  font-weight: 600;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.items {
  display: flex;
  height: 200rpx;
  align-items: center;
  width: 100%;
}
.img {
  height: 100%;
  min-width: 200rpx;
  background-color: lightblue;
  margin: 0 15rpx;
}
image {
  width: 100%;
  height: 100%;
}
checkbox {
  padding-left: 10rpx;
}
.right {
  flex-grow: 1;
  padding: 5rpx 0;
  font-size: 30rpx;
  height: 100%;
}
.goods_name {
  height: 50%;
  text-align: left;
  padding-right: 20rpx;
}
.goods_name view {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-height: 100rpx;
}
.flex {
  height: 50%;
  align-items: center;
  justify-content: center;
  text-align: left;
  height: 50%;
  display: flex;
}
.flex button {
  padding: 0;
  margin: 0;
  width: 80rpx !important;
  margin-right: 23rpx;
}
.price {
  flex: 1;
  font-size: 35rpx;
  color: orange;
}
.num {
  padding-right: 30rpx;
  flex: 1;
  text-align: right;
}

.bottom {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  align-items: center;
  border-top: 4rpx solid rgb(207, 207, 207);
  background-color: white;
}
.sumprice {
  flex: 2;
  font-size: 30rpx;
  text-align: right;
  padding-right: 20rpx;
}
.sumcount {
  flex: 1;
  font-size: 40rpx;
  color: white;
  background-color: rgb(255, 102, 0);
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  padding-left: 20rpx;
}
.empty {
  color: #999;
}
