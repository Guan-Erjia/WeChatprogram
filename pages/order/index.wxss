.tabs {
  display: flex;
}
.tabs-item {
  flex: 1;
  text-align: center;
  border-bottom: 3rpx solid #888;
  padding: 30rpx 0;
  font-size: 35rpx;
}
.active {
  border-bottom: 10rpx solid red;
}
.order-items {
  padding: 15rpx;
  border-bottom: 2rpx solid #999;
}
.info {
  display: flex;
  font-size: 30rpx;
  padding: 5rpx;
}
.right {
  text-align: right;
  flex: 1;
  color: #888;
}
.left {
  flex: 1;
}
.price {
  font-size: 35rpx;
  color: rgb(255, 102, 0);
}
