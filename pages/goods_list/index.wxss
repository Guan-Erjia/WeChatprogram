SearchInput {
  font-size: 28rpx;
}
.title {
  display: flex;
  align-items: center;
  height: 90rpx;
  font-size: 35rpx;
  box-shadow: 1rpx 1rpx 5rpx #888888;
}
.title-item {
  flex: 1;
  text-align: center;
  height: 100%;
  line-height: 90rpx;
}
.good-item {
  display: flex;
  height: 200rpx;
}
.good-item image {
  flex: 1;
  height: 100%;
}
.text {
  flex: 2;
  height: 100%;
  padding: 10rpx 10rpx;
}
.desc {
  position: relative;
  top: 10%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price {
  color: #fa9600;
  position: relative;
  height: 50%;
  bottom: -30%;
  font-size: 38rpx;
}
.active {
  border-bottom: 10rpx solid red;
}
