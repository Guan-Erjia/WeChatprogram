page {
  background-color: rgb(238, 236, 236);
}
.title {
  display: flex;
  align-items: center;
  font-size: 35rpx;
  box-shadow: 1rpx 1rpx 5rpx #888888;
  color: #999;
  background-color: white;
}
.title-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
}
.active {
  border-bottom: 10rpx solid red;
  color: black;
}
.active2{
  color: red;
}
.collect-item {
  display: flex;
  height: 200rpx;
  font-size: 30rpx;
  margin: 15rpx 0;
  background-color: white;
}
.item-left {
  flex: 1;
  height: 100%;
}
.item-left image {
  height: 100%;
  width: 300rpx;
  padding: 10rpx;
}
.item-right {
  flex: 3;
  overflow: hidden;
  height: 100%;
}
.desc,
.price {
  height: 50%;
  margin-top: 20rpx;
}
.price {
  color: tomato;
  font-size: 35rpx;
}
.desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.center {
  display: flex;
  margin: 3rpx 0;
}
.center-item {
  font-size: 32rpx;
  text-align: center;
  border: 1rpx solid #999;
  padding: 10rpx 0;
  width: 150rpx;
  background-color: white;
  margin: 20rpx;
}
